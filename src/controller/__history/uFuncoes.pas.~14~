unit uFuncoes;

interface

uses SqlExpr, uDmData;

function GenID(Generator : string) : integer;

implementation

function GenID(Generator : string) : integer;
  var
    qry : TSQLQuery;
begin
  try
    qry                     :=  TSQLQuery.Create(nil);
    qry.SQLConnection       :=  dmData.dbConn;

    qry.SQL.Add('Select gen_id('+  +', 1) as ID From RDB$DATABASE')
  finally

  end;
end;

end.
